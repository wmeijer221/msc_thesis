{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
	"postCreateCommand": "pip install --upgrade pip && pip install -r ./python_proj/requirements.txt",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.black-formatter",
				"ms-toolsai.jupyter",
				"yzhang.markdown-all-in-one",
				"ms-python.python",
				"Gruntfuggly.todo-tree"
			]
		}
	},
	"containerEnv": {
		"PYTHONPATH": "/workspaces/msc_thesis/",
		"EXPERIMENT_BASE_PATH": "/workspaces/msc_thesis/data/"
	}
}